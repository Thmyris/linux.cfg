        <span class="co0"># Display 6 colors per lines</span>
        <span class="kw1">if</span> <span class="br0">[</span> $<span class="br0">(</span><span class="br0">(</span><span class="br0">(</span><span class="re1">$color</span> + <span class="nu0">1</span><span class="br0">)</span> <span class="sy0">%</span> <span class="nu0">6</span><span class="br0">)</span><span class="br0">)</span> == <span class="nu0">4</span> <span class="br0">]</span> ; <span class="kw1">then</span>
            <span class="kw3">echo</span> <span class="co0"># New line</span>
        <span class="kw1">fi</span>
    <span class="kw1">done</span>
    <span class="kw3">echo</span> <span class="co0"># New line</span>
<span class="kw1">done</span>
